{
  "name": "Blz Debug Extension",
  "description": "A browser extension to debug Blazed Path applications",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "48": "icons/logo.svg",
    "128": "icons/logo.svg"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Blz Debug Extension",
    "default_popup": "popup/index.html",
    "default_icon": {
      "48": "icons/logo.svg",
      "128": "icons/logo.svg"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "debug.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}