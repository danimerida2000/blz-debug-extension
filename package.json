{
  "name": "blz-debug-extension",
  "version": "1.0.0",
  "description": "A browser extension to debug Blazed Path applications",
  "author": "Danilo MÃ©rida",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "build:dev": "cross-env NODE_ENV=development webpack",
    "watch": "npm run build:dev -- --watch",
    "watch:dev": "cross-env HMR=true npm run build:dev -- --watch",
    "build-zip": "node scripts/build-zip.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,js,vue,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,vue,css,scss}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "vue": "^3.5.27",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/plugin-transform-optional-chaining": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-typescript": "^7.27.0",
    "@babel/runtime-corejs3": "^7.28.6",
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.14.0",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/test-utils": "^2.4.6",
    "archiver": "^7.0.1",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "core-js": "^3.48.0",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.3",
    "ejs": "^4.0.1",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-vue": "^10.0.0",
    "happy-dom": "^18.0.0",
    "mini-css-extract-plugin": "^2.10.0",
    "prettier": "^3.5.3",
    "sass": "^1.89.1",
    "sass-loader": "^16.0.6",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9",
    "vue-eslint-parser": "^10.1.1",
    "vue-loader": "^17.4.2",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}